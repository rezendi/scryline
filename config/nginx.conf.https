worker_processes 4;

events { worker_connections 1024; }

http {

        upstream node-app {
              least_conn;
              server app:3000 weight=10 max_fails=3 fail_timeout=30s;
        }
         
        server {
              listen 80 default_server;
              listen [::]:80 default_server;
              server_name _;

              location /.well-known/acme-challenge/ {
                root /var/www/certbot;
              }

              location / {
                return 301 https://$host$request_uri;
              }
        }

        server {
              listen       443 ssl;
              server_name  scryline.com www.scryline.com;
          
              ssl_certificate     /etc/letsencrypt/live/scanvine.com/fullchain.pem;
              ssl_certificate_key /etc/letsencrypt/live/scanvine.com/privkey.pem;
              include /etc/letsencrypt/options-ssl-nginx.conf;
              ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem;
              include /etc/nginx/mime.types;

              location /.well-known/acme-challenge/ {
                root /var/www/certbot;
              }

              location /static/ {
                alias /static/;
              }

              location / {
                proxy_cache sv_cache;
                proxy_cache_use_stale error timeout http_500 http_502 http_503 http_504;
                proxy_cache_valid 200 1m;
                proxy_ignore_headers Set-Cookie;
                proxy_pass http://node-app;
                proxy_http_version 1.1;
                proxy_set_header Upgrade $http_upgrade;
                proxy_set_header Connection 'upgrade';
                proxy_set_header Host $host;
                # proxy_cache_bypass $http_upgrade;
              }
        }

}
